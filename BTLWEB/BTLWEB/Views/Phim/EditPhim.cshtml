@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@model BTLWEB.Models.Phim

<div class="card" style="padding-left: 310px; padding-right: 20px; padding-top: 20px">
    <div class="row">
        <div class="col-2">
            <h1>Edit</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="col-10">
        </div>
    </div>
    <form asp-controller="Phim" asp-action="EditPhim" asp-route-id="@Model.Id" method="post" class="m3">
        <input type="hidden" asp-for="Id" />

        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="TenPhim" class="col-sm-2 col-form-label">Tên phim</label>
            <div class="col-sm-10">
                <input asp-for="TenPhim" class="form-control" placeholder="Tên phim">
            </div>
            <span asp-validation-for="TenPhim" class="text-danger"></span>
        </div>

        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="AnhPhim" class="col-sm-2 col-form-label">Ảnh phim</label>
            <div class="col-sm-10">
                <input asp-for="AnhPhim" class="form-control" placeholder="Link ảnh phim">
            </div>
            <span asp-validation-for="AnhPhim" class="text-danger"></span>
        </div>

        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="MoTa" class="col-sm-2 col-form-label">Mô tả</label>
            <div class="col-sm-10">
                <input asp-for="MoTa" class="form-control" placeholder="Mô tả">
            </div>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="IdLoaiPhim" class="col-sm-2 col-form-label">Loại phim</label>
            <div class="col-sm-10">
                <select asp-for="IdLoaiPhim" class="form-control" asp-items="@ViewBag.IdLoaiPhim"></select>
            </div>
            <span asp-validation-for="IdLoaiPhim" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="ThoiLuong" class="col-sm-2 col-form-label">Thời lượng</label>
            <div class="col-sm-10">
                <input asp-for="ThoiLuong" class="form-control" placeholder="Thời lượng">
            </div>
            <span asp-validation-for="ThoiLuong" class="text-danger"></span>
        </div>

        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="NgayCongChieu" class="col-sm-2 col-form-label">Ngày công chiếu</label>
            <div class="col-sm-10">
                <input asp-for="NgayCongChieu" class="form-control" placeholder="Ngày công chiếu">
            </div>
            <span asp-validation-for="NgayCongChieu" class="text-danger"></span>
        </div>

        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="NgayKetThuc" class="col-sm-2 col-form-label">Ngày kết thúc</label>
            <div class="col-sm-10">
                <input asp-for="NgayKetThuc" class="form-control" placeholder="Ngày kết thúc">
            </div>
            <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="DienVien" class="col-sm-2 col-form-label">Diễn viên</label>
            <div class="col-sm-10">
                <input asp-for="DienVien" class="form-control" placeholder="DienVien">
            </div>
            <span asp-validation-for="DienVien" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="DaoDien" class="col-sm-2 col-form-label">Đạo diễn</label>
            <div class="col-sm-10">
                <input asp-for="DaoDien" class="form-control" placeholder="Đạo diễn">
            </div>
            <span asp-validation-for="DaoDien" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="TinhTrang" class="col-sm-2 col-form-label">Tình trạng</label>
            <div class="col-sm-10">
                <input asp-for="TinhTrang" class="form-check-input" />
            </div>
            <span asp-validation-for="TinhTrang" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="NamPhatHanh" class="col-sm-2 col-form-label">Năm phát hành</label>
            <div class="col-sm-10">
                <input asp-for="NamPhatHanh" class="form-control" placeholder="Năm phát hành">
            </div>
            <span asp-validation-for="NamPhatHanh" class="text-danger"></span>
        </div>

        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="ChatLuong" class="col-sm-2 col-form-label">Chất lượng</label>
            <div class="col-sm-10">
                <input asp-for="ChatLuong" class="form-control" placeholder="Chất lượng">
            </div>
            <span asp-validation-for="ChatLuong" class="text-danger"></span>
        </div>
        <div style="margin-top: 10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </form>
</div>
