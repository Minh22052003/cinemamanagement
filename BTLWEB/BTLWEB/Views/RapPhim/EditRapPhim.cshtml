@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@model BTLWEB.Models.RapPhim

<div class="card" style="padding-left: 310px; padding-right: 20px; padding-top: 20px">
    <div class="row">
        <div class="col-2">
            <h1>Edit</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="col-10">
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-controller="RapPhim" asp-action="EditRapPhim" asp-route-id="@Model.Id" method="post" class="m3">
        <input type="hidden" asp-for="Id" />

        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="TenRapChieu" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TenRapChieu" class="form-control" placeholder="Tên rạp Phim">
            </div>
            <span asp-validation-for="TenRapChieu" class="text-danger"></span>
        </div>

        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="TongSoPhong" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TongSoPhong" class="form-control" placeholder="Số phòng">
            </div>
            <span asp-validation-for="TongSoPhong" class="text-danger"></span>
        </div>

        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="ThanhPho" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ThanhPho" class="form-control" placeholder="Thành phố">
            </div>
            <span asp-validation-for="ThanhPho" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="QuanHuyen" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="QuanHuyen" class="form-control" placeholder="Quận huyện">
            </div>
            <span asp-validation-for="QuanHuyen" class="text-danger"></span>
        </div>

        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="PhuongXa" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PhuongXa" class="form-control" placeholder="Phường xã">
            </div>
            <span asp-validation-for="PhuongXa" class="text-danger"></span>
        </div>

        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="KhungGio" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="KhungGio" class="form-control" placeholder="Xuất chiếu">
            </div>
            <span asp-validation-for="KhungGio" class="text-danger"></span>
        </div>

        <div style="margin-top: 10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </form>
</div>
